
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_abstract_white_triangles" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip" >

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="45.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffb0b0b0"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txtTitle1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/btnBack"
            android:layout_toLeftOf="@+id/btnDeleteAll"
            android:background="#ffb0b0b0"
            android:gravity="right|center"
            android:paddingEnd="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="0.0dip"
            android:paddingStart="10.0dip"
            android:textColor="#ff000000"
            android:textSize="14.0sp"
            android:text="Xóa Tất Cả!"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnDeleteAll"
            android:layout_width="45.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#ffb0b0b0"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/ic_delete_all" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listDSa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adViewListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="0.0dip" />
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhấn giữ mục để xóa !"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
       android:layout_alignParentBottom="true"
        />

    
</RelativeLayout>
    